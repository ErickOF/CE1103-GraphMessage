<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bluetooth">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <Button
            android:id="@+id/btnBluetooth"
            android:background="@color/com_facebook_blue"
            android:textColor="@color/com_facebook_share_button_text_color"
            android:drawablePadding="2dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="" />
     </RelativeLayout>

    <ListView
        android:id="@+id/lvDispositivos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnBuscarDispositivo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/icon_buscar"
            android:drawablePadding="10dp"
            android:textSize="16dp"
            android:background="@color/com_facebook_blue"
            android:textColor="@color/com_facebook_share_button_text_color"
            android:layout_centerHorizontal="true"
            android:text="@string/BuscarDispositivo" />
    </LinearLayout>

</LinearLayout>